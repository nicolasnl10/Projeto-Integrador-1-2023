<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.agendamento.controllers.ListaClientesController">
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" minWidth="10.0" />
    <ColumnConstraints minWidth="10.0" />
      <ColumnConstraints minWidth="10.0" />
      <ColumnConstraints halignment="RIGHT" minWidth="10.0" />
      <ColumnConstraints />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints />
      <RowConstraints minHeight="10.0" />
    <RowConstraints minHeight="10.0" />
      <RowConstraints minHeight="10.0" />
      <RowConstraints minHeight="10.0" />
      <RowConstraints minHeight="10.0" />
  </rowConstraints>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <children>
      <Button fx:id="btn_incluir" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Incluir" GridPane.rowIndex="2" />
      <Button fx:id="btn_sair" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Sair" GridPane.columnIndex="3" GridPane.rowIndex="2" />
      <Button fx:id="btn_alterar" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Alterar" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="btn_excluir" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Excluir" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <TableView fx:id="tb_clientes" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: #4D4DFF;" GridPane.columnSpan="5" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="tb_clientes_id_cliente" prefWidth="130.0" text="Cod. Cliente" />
          <TableColumn fx:id="tb_clientes_nome" prefWidth="130.0" text="Nome" />
          <TableColumn fx:id="tb_clientes_telefone" prefWidth="130.0" text="Telefone" />
            <TableColumn fx:id="tb_clientes_email" prefWidth="130.0" text="Email" />
        </columns>
      </TableView>
   </children>
</GridPane>
